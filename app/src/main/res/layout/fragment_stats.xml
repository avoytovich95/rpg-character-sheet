<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.StatsFragment"
>

  <ScrollView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

      <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
      >
        <TextView
                style="@style/StatText"

                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:id="@+id/str"
                android:text="Strength"/>
      <EditText
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:inputType="number"
              android:hint="Enter str num"/>

      </LinearLayout>

      <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/skillSet1"

        />
      </LinearLayout>

      <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView
                style="@style/StatText"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:id="@+id/dex"
                android:text="Dexterity"/>


        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="Enter dex num"/>

      </LinearLayout>
      <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView

                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/skillSet2"

        />
      </LinearLayout>

      <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView
                style="@style/StatText"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:id="@+id/con"
                android:text="Constitution"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="Enter con num"/>

      </LinearLayout>
      <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/skillSet3"

        />
      </LinearLayout>

      <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView
                style="@style/StatText"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:id="@+id/intel"
                android:text="Intelligence"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="Enter int num"/>

      </LinearLayout>
      <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/skillSet4"

        />
      </LinearLayout>

      <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView
                style="@style/StatText"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:id="@+id/wis"
                android:text="Wisdom"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="Enter wis num"/>

      </LinearLayout>
      <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/skillSet5"

        />
      </LinearLayout>

      <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView
                style="@style/StatText"
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:id="@+id/charm"
                android:text="Charisma"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="Enter char num"/>

      </LinearLayout>
      <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/skillSet6"

        />
      </LinearLayout>


    </LinearLayout>


  </ScrollView>


</FrameLayout>